{
  "name": "tourista",
  "version": "0.0.11",
  "description": "A flexible onboarding tour library for React applications",
  "repository": {
    "type": "git",
    "url": "https://github.com/RicSala/tourista.git"
  },
  "homepage": "https://github.com/RicSala/tourista",
  "bugs": {
    "url": "https://github.com/RicSala/tourista/issues"
  },
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "dev": "tsc --project tsconfig.json --watch",
    "type:check": "tsc --noEmit --pretty",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepublishOnly": "pnpm run build",
    "link": "pnpm link --global",
    "unlink": "pnpm unlink --global",
    "dev:setup": "./scripts/setup-dev.sh",
    "prepare": "husky",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major"
  },
  "keywords": [
    "react",
    "onboarding",
    "tour",
    "tutorial",
    "guide",
    "walkthrough"
  ],
  "author": "",
  "license": "MIT",
  "packageManager": "pnpm@10.6.2",
  "peerDependencies": {
    "next": ">=14.0.0",
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "peerDependenciesMeta": {
    "next": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.35.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.7",
    "next": "^15.5.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@floating-ui/react": "^0.27.16",
    "@tinystack/machine": "^0.1.0",
    "motion": "^12.23.12",
    "tourista": "^0.0.4"
  }
}
